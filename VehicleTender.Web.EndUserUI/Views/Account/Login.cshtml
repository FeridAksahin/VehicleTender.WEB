
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-6 col-md-4"></div>
        <div class="col-6 col-md-4">
            <form>
                <h3 class="mb-3 pb-3 display-4 text-center mt-3">Giriş Yap</h3>
                <div class="mt-4">
                    <input type="email" class="form-control form-control-lg" placeholder="Email">
                </div>
                <div class="mt-4">
                    <input type="password" class="form-control form-control-lg" placeholder="Şifre" />
                </div>
                <div class="mt-4">
                    <button class="btn btn-info btn-lg btn-block col-md-12" type="button">Giriş Yap</button>
                </div>
                <p class="small mb-5 pb-lg-2"><a  class="text-muted">@Html.ActionLink("Parolamı Unuttum!", "ForgotPassword", "Account")</a></p>
                <p>Hesabınız yok mu? <a class="link-info">@Html.ActionLink("Kayıt Ol", "Register", "Account")</a></p>
            </form>
        </div>
    </div>
</div>

