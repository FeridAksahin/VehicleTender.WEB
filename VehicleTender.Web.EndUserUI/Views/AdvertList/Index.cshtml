@using VehicleTender.WEB.UserDTO.VM.Advert;
@{
    ViewBag.Title = "BuyAVehicleNow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<CarListVM>

<h2 style="text-align:center;">Hemen Araç Al</h2>

<div class="container-fluid bg-white pt-3 px-lg-5">
    <div class="row mx-n2">
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <select class="custom-select px-4 mb-3" style="height: 50px;">
                <option selected>Marka</option>
                <option value="1">Mercedes</option>
                <option value="2">BMW</option>
            </select>
        </div>
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <select class="custom-select px-4 mb-3" style="height: 50px;">
                <option selected>Model</option>
                <option value="1">R3</option>
            </select>
        </div>
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <div class="date mb-3" id="date" data-target-input="nearest">
                <input type="text" class="form-control p-4" placeholder="KM Min" />
            </div>
        </div>
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <div class="date mb-3" id="date" data-target-input="nearest">
                <input type="text" class="form-control p-4" placeholder="KM Max" />
            </div>
        </div>

        @*İl*@
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <select class="custom-select px-4 mb-3" style="height: 50px;">
                <option selected>İl</option>
                <option value="1">Ankara</option>
                <option value="1">Zonguldak</option>
            </select>
        </div>
        @*İlçe*@
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <select class="custom-select px-4 mb-3" style="height: 50px;">
                <option selected>İlçe</option>
                <option value="1">Beyoğlu</option>
                <option value="1">Kadiköy</option>
            </select>
        </div>
        @*Min Fiyat*@
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <div class="date mb-3" id="date" data-target-input="nearest">
                <input type="text" class="form-control p-4" placeholder=" Max Fiyat" />
            </div>
        </div>
        @*Max Fiyat*@
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <div class="date mb-3" id="date" data-target-input="nearest">
                <input type="text" class="form-control p-4" placeholder=" Min Fiyat" />
            </div>
        </div>

        @*Vites*@

        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <select class="custom-select px-4 mb-3" style="height: 50px;">
                <option selected>Vites Tipi</option>
                <option value="1">Otomatik</option>
                <option value="1">Düz</option>

            </select>
        </div>

        @*TArih*@
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <div class="date mb-3" id="date" data-target-input="nearest">
                <input type="date" class="form-control p-4" placeholder="İlan Tarihi" />
            </div>
        </div>




        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <select class="custom-select px-4 mb-3" style="height: 50px;">
                <option selected>Yakıt</option>
                <option value="1">Benzin</option>
                <option value="2">Elektrik</option>
            </select>
        </div>
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <select class="custom-select px-4 mb-3" style="height: 50px;">
                <option selected>Yıl</option>
                <option value="1">2022</option>
                <option value="2">2021</option>
            </select>
        </div>
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <button class="btn btn-primary btn-block mb-3" type="submit" style="height: 50px;">Ara</button>
        </div>
    </div>
</div>



