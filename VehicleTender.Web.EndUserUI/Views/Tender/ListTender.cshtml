@model VehicleTender.WEB.UserDTO.VM.Tender.PageModelTender
@{
    ViewBag.Title = "ListTender";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.infoTitle = "Bu sayfada ihaleler listelenmektedir...";
}
<div class="container-fluid">
    <h5 class="mb-3 pb-3 display-5 text-center mt-4">İhale Ara</h5>
    @using (Html.BeginForm("ListVehicle", "Vehicle", FormMethod.Post))
    {
        <div class="row">
            <div class="col-4">
                <label>İhale Adı</label>
                <select class="form-control" >
                    <option value="value">text</option>
                </select>
            </div>
            <div class="col-4">
                <label>Bireysel / Kurumsal</label>
                <select class="form-control">
                    <option value="value">text</option>
                </select>
            </div>
            <div class="col-4">
                <label>Statü</label>
                <select class="form-control">
                    <option value="value">text</option>
                </select>
            </div>
        </div>
        <hr />
        <input type="submit" a style="background-color: #2B2E4A; float:right;" value="Listele" class="btn btn-info mt-1" />
    }
    <br />
    <h5 class="mb-3 pb-3 display-5 text-center mt-4">İhale Listesi</h5>
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="color:black;">İhale Adı</th>
                <th style="color:black;">Bireysel / Kurumsal</th>
                <th style="color:black;">İhale Başlangıç</th>
                <th style="color:black;">İhale Bitiş</th>
                <th style="color:black;">Statü</th>
                <th style="color:black;">Kaydeden Kullanıcı</th>
                <th style="color:black;">Kaydetme Zamanı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.TenderList)
            {
                <tr>
                    <td>@i.TenderName</td>
                    <td>@i.IndividualOrCorparate</td>
                    <td>@i.TenderStartDate</td>
                    <td>@i.TenderEndDate</td>
                    <td>@i.Statu</td>
                    <td>@i.CreatedBy</td>
                    <td>@i.CreatedDate</td>
                    @using (Html.BeginForm("TenderDetail", "Tender",new {id=i.Id},FormMethod.Get))
                    {
                    <td><a href="~/Tender/TenderDetail"><input type="submit" a style="background-color: #2B2E4A; float:right;" value="Detay" class="btn btn-info mt-1" href="~/Tender/TenderDetail" /></a></td>
                    }
                </tr>
            }


        </tbody>
    </table>
    <hr />
</div>

