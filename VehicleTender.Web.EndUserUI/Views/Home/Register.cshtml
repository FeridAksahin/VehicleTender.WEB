
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-6 col-md-4"></div>
        <div class="col-6 col-md-4">
            <form>
                <h3 class="mb-3 pb-3 display-4 text-center mt-0">Kayıt Ol</h3>
                <div class="mb-4">
                    <input type="text" class="form-control form-control-lg" placeholder="Ad Soyad">
                </div>
                <div class="mb-4">
                    <input type="email" class="form-control form-control-lg" placeholder="Email">
                </div>
                <div class="mb-4">
                    <input type="password" class="form-control form-control-lg" placeholder="Şifre" />
                </div>
                <div class="mb-4">
                    <input type="text" class="form-control form-control-lg" placeholder="Telefon">
                </div>
                <div class="mb-4">
                    <button style="background-color: #2B2E4A;" class="btn btn-info btn-lg col-md-12" type="button">Kayıt Ol</button>
                </div>
            </form>
        </div>
    </div>
</div>

