@model VehicleTender.WEB.UserDTO.VM.Account.CorporateRegisterVM
@{
    ViewBag.Title = "CorporateRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid  mt-4">
    <div class="container">
        <h3 class="mb-3 pb-3 display-5 text-center">Kurumsal Kayıt</h3>
        @using (Html.BeginForm("CorporateRegister", "Home", FormMethod.Post))
        {
            <div class="row">

                <div class="col-6">
                    @Html.TextBoxFor(x => x.Username, new { placeholder = "Kullanıcı Adı", @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(x => x.Username)
                    @Html.TextBoxFor(x => x.Name, new { placeholder = "Ad", @class = "form-control form-control-lg mt-2" })
                    @Html.ValidationMessageFor(x => x.Name)

                    @Html.TextBoxFor(x => x.Surname, new { placeholder = "Soyad", @class = "form-control form-control-lg mt-2" })
                    @Html.ValidationMessageFor(x => x.Surname)

                    @Html.TextBoxFor(x => x.Mail, new { placeholder = "Email", @class = "form-control form-control-lg mt-2" })
                    @Html.ValidationMessageFor(x => x.Mail)

                    @Html.TextBoxFor(x => x.Password, new { placeholder = "Şifre", @class = "form-control form-control-lg mt-2" })
                    @Html.ValidationMessageFor(x => x.Password)

                    @Html.TextBoxFor(x => x.Telephone, new { placeholder = "Telefon", @class = "form-control form-control-lg mt-2" })
                    @Html.ValidationMessageFor(x => x.Telephone)
                </div>
                <div class="col-6">
                    @Html.TextBoxFor(x => x.CompanyName, new { placeholder = "Şirket Adı", @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(x => x.CompanyName)


                    @Html.DropDownListFor(x => x.CompanyType, new List<SelectListItem> { new SelectListItem { Text = "Anonim", Value = "1" } }, new { @class = "form-control form-control-lg mt-2" })


                    @Html.TextAreaFor(x => x.Address, new { placeholder = "Adres", row = "3", @class = "form-control form-control-lg mt-2" })
                    @Html.ValidationMessageFor(x => x.Address)


                    @Html.DropDownListFor(x => x.City, new List<SelectListItem> { new SelectListItem { Text = "İstanbul", Value = "1" } }, new { @class = "form-control form-control-lg mt-2" })


                    @Html.DropDownListFor(x => x.District, new List<SelectListItem> { new SelectListItem { Text = "Kartal", Value = "1" } }, new { @class = "form-control form-control-lg mt-2" })

                    @Html.CheckBoxFor(x => x.Kvkk)
                    @Html.ValidationMessageFor(x => x.Kvkk)
                    <label><a href="#"><strong>Kullanım sözleşmesini</strong></a> onaylıyorum!</label>
                </div>
                <button style="background-color: #2B2E4A;" class="btn btn-info btn-lg btn-block col-md-12" type="submit">Kayıt Ol</button>

            </div>
        }
    </div>
</div>