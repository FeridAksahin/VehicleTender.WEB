<h5 class="mb-3 pb-3 display-5 text-center mt-4">Stok Yönetimi</h5>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
       Şirketler
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-bordered table-hover" >
            <thead>
                <tr>
                    <th>Şirket Adı</th>
                    <th>Detay</th>
          
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 15; i++)
                {
                    <tr>
                        <td>X Şirketi</td>
                        <td class="update_delete"><button type="button" class="btn btn-warning" data-toggle="modal" data-target=".bd-example-modal-lg">Detay</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


