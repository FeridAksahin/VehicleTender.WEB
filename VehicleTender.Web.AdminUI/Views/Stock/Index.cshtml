    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Şirketler
                </div>
                <div class="card-body">
                    <table id="datatablesSimple" class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Araç Marka</th>
                                <th>Araç Model</th>
                                <th>Km</th>
                                <th>Yıl</th>
                                <th>Plaka</th>
                                <th>Renk</th>
                                <th>Garajda</th>
                                <th>Satılan</th>

                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < 15; i++)
                            {
                                <tr>
                                    <td>Jeep</td>
                                    <td>Şahin</td>
                                    <td>500.000</td>
                                    <td>1998</td>
                                    <td>34 GS 1905</td>
                                    <td>Beyaz</td>
                                    <td>25</td>
                                    <td>2</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>