@using VehicleTender.Web.AdminUI.Models.PageModel
@model CommissionPageModel;


<h5 class="mb-3 pb-3 display-5 text-center mt-4">Komisyon İşlemleri</h5>

<div class="row m-5">
    <a class="btn btn-primary w-100 p-3 mt-3 mb-3" data-toggle="modal" data-target="#exampleModalCenter">Yeni Komisyon Aralığı Ekle</a>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Komisyon Ücretleri
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Fiyat Başlangıç</th>
                    <th>Fiyat Bitiş</th>
                    <th>Komisyon Ücreti</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                
                @foreach(var item in Model.CommissionList)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.CarStartingPrice ₺</td>
                        <td>@item.CarEndingPrice ₺</td>
                        <td>@item.CommissionPrice ₺</td>
                        <td class="update_delete">
                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter1">Güncelle</button>
                            <form method="post">
                            <button type="submit" class="btn btn-danger" asp-action="DeleteCommission" asp-controller="Commission" asp-route-ID="@item.ID">Sil</button>
                            </form>
                        </td>

                     
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-center display-7 modal-title" id="exampleModalLongTitle">Yeni Komisyon Aralığı Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form method="post" action="AddCommission">
                    <div class="row">
                        <div class="mb-3">
                            <label class="form-label">Başlangıç Fiyat Araloğı</label>
                            <input type="text" class="form-control">
                            <input class="form-control" type="text" asp-for="AddCommission.CarStartingPrice">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bitiş Fiyat Aralığı</label>
                            <input class="form-control" type="text" asp-for="AddCommission.CarEndingPrice">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Komisyon Ücreti</label>
                                <input class="form-control" type="text" asp-for="AddCommission.CommissionPrice">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            <form>
                            <button type="submit" class="btn btn-warning"  asp-action="AddCommission" asp-controller="Commission">Kaydet</button>
                            </form>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModalCenter1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-center display-7 modal-title" id="exampleModalLongTitle">Komisyon Aralığı Güncelle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form method="post" action="UpdateCommission">
                    <div class="row">
                        <div class="mb-3">
                            <label class="form-label">Başlangıç Fiyat Araloğı</label>
                            <input type="text" class="form-control">
                            <input class="form-control" type="text" asp-for="UpdateCommission.CarStartingPrice">
                        </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bitiş Fiyat Aralığı</label>
                            <input class="form-control" type="text" asp-for="UpdateCommission.CarEndingPrice">
                        <div class="mb-3">
                            <label class="form-label">Komisyon Ücreti</label>
                            <input class="form-control" type="text" asp-for="UpdateCommission.CommissionPrice">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>

                            <form action="post">
                            <button type="submit" class="btn btn-warning" asp-action="UpdateCommission" asp-controller="Commission">Sil</button>
                            </form>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

