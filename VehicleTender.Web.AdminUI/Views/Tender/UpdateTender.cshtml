



<h5 class="mb-3 pb-3 display-5 text-center mt-4">İhale Güncelle</h5>
<div class="row add_tender m-5">
    <div class="col-4">
        <label>İhale Adı</label>
        <input type="text" class="form-control" id="TenderName">
    </div>
    <div class="col-4">
        <label>Bireysel / Kurumsal</label>
        <select class="form-control">
            <option value="value">Bireysel</option>
            <option value="value">Kurumsal</option>
        </select>
    </div>
    <div class="col-4">
        <label>Şirket Adı</label>
        <select class="form-control">
            <option value="value">Şirket Adı</option>
        </select>
    </div>
    <div class="col-4">
        <label>Statü</label>
        <select class="form-control">
            <option value="value">text</option>
        </select>
    </div>
    <div class="col-4">
        <label>İhale Başlangıç Tarihi</label>
        <div class="input-group date" id="datepicker">
            <input type="text" class="form-control">
            <span class="input-group-append">
                <span class="input-group-text bg-white">
                    <i class="fa fa-calendar"></i>
                </span>
            </span>
        </div>
    </div>
    <div class="col-4">
        <label>İhale Başlangıç Saati</label>
        <input type="text" class="form-control" id="TenderName">
    </div>

    <div class="col-4">
        <label>İhale Bitiş Tarihi</label>
        <div class="input-group date" id="date">
            <input type="text" class="form-control">
            <span class="input-group-append">
                <span class="input-group-text bg-white">
                    <i class="fa fa-calendar"></i>
                </span>
            </span>
        </div>
    </div>
    <div class="col-4">
        <label>İhale Bitiş Saati</label>
        <input type="text" class="form-control" id="TenderName">
    </div>


</div>


<div class="card mb-4 m-5">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        İhale Araç Listesi
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Araç Id</th>
                    <th>Araç Marka</th>
                    <th>Araç Model</th>
                    <th>Bireysel/Kurumsal</th>
                    <th>Statü</th>
                    <th>Kaydeden Kullanıcı</th>
                    <th>Kaydetme Zamanı</th>
                    <th>Fiyat</th>
                    <th>İhaleye Ekle</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 2; i++)
                {
                    <tr>
                        <td>Name</td>
                        <td>Position</td>
                        <td>Model</td>
                        <td>Office</td>
                        <td>Age</td>
                        <td>Start date</td>
                        <td>sdgasdfsadf</td>
                        <td class="tender_table_btn">
                            <button type="button" class="btn btn-primary " data-toggle="modal" data-target="#addTenderCarPricePopUp">
                                Fiyat
                            </button>
                        </td>
                        <td class="tender_table_btn"><input type="checkbox" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="justify-content-md-end text-md-end m-5">
    <input type="submit" value="Kaydet" class="btn btn-success col-md-1" />
</div>

<!--pop up start-->

<div class="modal fade" id="addTenderCarPricePopUp" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">İhale Fiyat</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/" method="post">
                <div class="modal-body">
                    <div class="row m-3">
                        <label>Araç Id</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="row m-3">
                        <label>İhale Başlangıç Fiyatı</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="row m-3">
                        <label>Minumum Alım Fiyatı</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="button" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>


