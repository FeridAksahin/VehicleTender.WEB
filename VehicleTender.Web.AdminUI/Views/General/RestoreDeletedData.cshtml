@{
    ViewData["Title"] = "Restore Deleted Data";
}


<div>
    <h5 class="mb-3 pb-3 display-5 text-center mt-4">Silinen Verileri Geri Yükleme Sayfası</h5>
    <div class="row filter">
        <div class="col-4">
            <label>Veri Türü</label>
            <select class="form-control">
                <option value="value">text</option>
            </select>
        </div>
        <div class="col-4">
            <label>Şu Tarihten Bugüne</label>
            <select class="form-control">
                <option value="value">text</option>
            </select>
        </div>
        <div class="col-4">
            <label>Silen Kullanıcı</label>
            <select class="form-control">
                <option value="value">text</option>
            </select>
        </div>
                    <div class="row">
                <div class="col-12">
                    <input type="submit" value="Listele" class="btn btn-primary m-3 list" />
                </div>
            </div>
    </div>
</div>

<div class="card mb-4 m-5">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
       Silinen Veriler Tablosu
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Veri Türü</th>
                    <th>Silinme Tarihi</th>
                    <th>Silen Kullanıcı</th>
                    <th>Yapılacak İşlem</th>
                    
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 15; i++)
                {
                    <tr>
                        <td>1</td>
                        <td>İhale</td>
                        <td>11.10.2022</td>
                        <td>Can:ServerAdmin</td>
                        <td class="update_delete">
                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter6">Geri Yükle</button>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter7">Tamamen Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="exampleModalCenter6" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p>Veriyi Geri Yüklemek İstediğinize Emin Misiniz?</p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <button class="btn btn-outline-secondary btn-block mt-3">Geri Yükle</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<div class="modal fade" id="exampleModalCenter7" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p>X kişisi silinsin mi?</p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <button class="btn btn-outline-danger btn-block mt-3">Sil</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
