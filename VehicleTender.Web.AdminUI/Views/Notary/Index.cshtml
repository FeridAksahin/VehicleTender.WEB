@model VehicleTender.Web.AdminUI.Models.Notary.NotaryDTO

<h5 class="mb-3 pb-3 display-5 text-center mt-4">Noter İşlemleri</h5>
<div class="row m-5">
    <a class="btn btn-primary w-100 p-3 mt-3 mb-3" data-toggle="modal" data-target="#exampleModalCenter">Güncelle</a>
</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
       Noter Ücreti
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-hover table-bordered" >
            <thead>
                <tr>
                    <th>Noter Ücreti</th>
                    <th>Son Geçerlilik Tarihi</th>
                    <th></th>
          
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.NotaryPrice</td>
                    <td>@Model.EndDate</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
 
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-center display-7 modal-title" id="exampleModalLongTitle">Yeni Komisyon Aralığı Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">

                        <form asp-action="Update" asp-controller="Notary">
                        <div class="mb-3">
                            <label class="form-label">Yeni Noter Ücreti</label>
                            <input type="text" class="form-control" asp-for="NotaryPrice">

                        </div>
                        <div class="mb-3">
                            <label class="form-label">Son Geçerlilik Tarihi</label>
                            <input type="datetime" class="form-control" asp-for="EndDate">
                        </div>
                        <div class="mb-3">
                        
                            <input type="hidden" class="form-control" asp-for="Id">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






