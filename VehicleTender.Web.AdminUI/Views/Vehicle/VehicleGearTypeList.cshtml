@model List<GearType>

@{
    ViewData["Title"] = "Vehicle Gear Type List";
}
<h5 class="mb-3 pb-3 display-5 text-center mt-4">Vites Tipleri</h5>

<div class="row m-3">
    <button type="button" class="btn btn-primary w-100 p-3 mt-3 mb-3" data-toggle="modal" data-target="#newRole">
        Vites Tipi Ekle
    </button>
</div>
<div class="card mb-4 m-5">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Vites Tipi Tablosu
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Sıra</th>
                    <th>Vites Tipi</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (GearType item in @Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.GearTypeName</td>
                        <td class="update_delete">
                            <form>
                                <button type="submit" class="btn btn-danger" asp-controller="Vehicle" asp-action="GearTypeDelete" asp-route-ID="@item.Id">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="newRole" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Vites Tipi Ekle </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="VehicleAddGearType" method="post">
                <div class="modal-body">
                    <div class="row m-3">
                        <label>Vites Tipi </label>
                        <input type="text" class="form-control" name="gearType">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

